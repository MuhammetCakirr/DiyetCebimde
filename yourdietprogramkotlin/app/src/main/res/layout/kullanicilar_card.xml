<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.cardview.widget.CardView

        app:cardCornerRadius="5dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="#C3FAF3F3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="15dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/kullanicifotocard">
                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:src="@drawable/celali"
                        android:id="@+id/kullanicifoto">
                    </ImageView>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="İsim"
                        app:boxBackgroundColor="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/kullaniciisim"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/people"
                            android:drawablePadding="10dp"
                            android:text="Muhammet İkbal Çakır">

                        </com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Email"
                        app:boxBackgroundColor="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/kullaniciemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/emaillik"
                            android:drawablePadding="10dp"
                            android:text="mamicakir30@gmail.com">

                        </com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:hint="Şifre"
                        app:boxBackgroundColor="@color/white">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/kullanicisifre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/password"
                            android:drawablePadding="10dp"
                            android:text="*********">


                        </com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>







        <Button
            android:layout_margin="10dp"
            android:id="@+id/btnkullanicigüncelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="guncelle"
            android:text="Güncelle">

        </Button>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/btnkullanicisil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="guncelle"
                android:text="Sil">

            </Button>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>