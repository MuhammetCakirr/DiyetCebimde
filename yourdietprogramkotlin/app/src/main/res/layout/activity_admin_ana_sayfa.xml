<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.AdminAnaSayfaActivity"
    android:orientation="vertical"
    android:background="#C3FAF3F3">



    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_margin="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/AdminSayfasi"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="15dp">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Admin Sayfası"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                >
            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/kullanicilarigor"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="15dp">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Kullanıcıları Gör"
                android:textSize="20sp"
                android:textColor="@color/white"

                android:textStyle="bold|italic"
                >
            </TextView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_margin="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/Urunlerigor"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="15dp">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ürünleri Gör"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold|italic"
                >
            </TextView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/UrunEkle"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="15dp">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ürün Ekle"
                android:textSize="20sp"
                android:textColor="@color/white"

                android:textStyle="bold|italic"
                >
            </TextView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>